doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="css/style.min.css")
		title PrimeOne
	body
		.wrap
			header.header
				.container
					.header-top
						.header-top-lang
							a(href="#").header-top-lang__item.active En
							a(href="#").header-top-lang__item Ru
							a(href="#").header-top-lang__item Esp
						a(href="#").header-top__link Online ordering
					.header-bottom
						.header-bottom__column
							nav.header-bottom-menu
								ul.header-bottom-menu-list
									li: a(href="#").header-bottom-menu__link About
									li: a(href="#").header-bottom-menu__link Menus
									li: a(href="#").header-bottom-menu__link Service info
						.header-bottom__column
							a(href="/").header-logo
								span.header-logo__text Ny
									span c's
								span.header-logo__img
									img(src="img/logo.png", alt="logo")
								span.header-logo__text Catering
						.header-bottom__column
							ul.header-bottom-menu-list
								nav.header-bottom-menu
									li: a(href="#").header-bottom-menu__link Gallery
									li: a(href="#").header-bottom-menu__link Friends
									li: a(href="#").header-bottom-menu__link Contact
			.private
				.private__column
					.private__column.ibg
				.private__column
					.private-body
						.private-body__title Private catering
						.private-body__text Treat your guests to a beautifully plated dinner, hand-crafted canapes or a casual BBQ.
						.private-body-links
							a(href="#").private-body-links__btn Get a quote
							a(href="#").private-body-links__link View menus
			.products
				.products__column
					.card
						.card__header
							figure.card__figure
								img(src="img/Corporate_catering.jpg", alt="product-logo").card__image
						.card__body
							h2.card__title Corporate catering
							p.card__text We are able to serve events from 2 to 2000 guests and always reasonable prices.
						.card__footer
							.card-actions
								a(href="#").card-actions__btn Get a quote
								a(href="#").card-actions__link View menus
				.products__column
					.card
						.card__header
							figure.card__figure
								img(src="img/Private_catering.jpg", alt="product-logo").card__image
						.card__body
							h2.card__title Private catering
							p.card__text Fresh, seasonal and simple cuisine. Food is our business and our passion.
						.card__footer
							.card-actions
								a(href="#").card-actions__btn Get a quote
								a(href="#").card-actions__link View menus
				.products__column
					.card
						.card__header
							figure.card__figure
								img(src="img/Wedding_catering.jpg", alt="product-logo").card__image
						.card__body
							h2.card__title Wedding catering
							p.card__text We use only the best organic ingredients and gluten and dairy free cooking.
						.card__footer
							.card-actions
								a(href="#").card-actions__btn Get a quote
								a(href="#").card-actions__link View menus
				.products__column
					.card
						.card__header
							figure.card__figure
								img(src="img/Online_ordering.jpg", alt="product-logo").card__image
						.card__body
							h2.card__title Online Ordering
							p.card__text Successful catering is about organisation, high quality service, and great food.
						.card__footer
							.card-actions
								a(href="#").card-actions__btn Get a quote
								a(href="#").card-actions__link View menus
			.why
				.why-row-1
					.why-row-1__col
						.why-row-1-title Why CHOOSE us?
					.why-row-1__col.why-ibg
				.why-row-2
					.why-row-2-cards
						.why-row-2__col
							.why-row-2-card
								.why-row-2-card__imgbox
									img(src="img/icons/flower.svg", alt="Always fresh").why-row-2-card__img
								.why-row-2-card__txtbox
									h2.why-row-2-card__title Always fresh
									p.why-row-2-card__text Fresh, seasonal and simple cuisine. Food is our business and our passion.
							.why-row-2-card
								.why-row-2-card__imgbox
									img(src="img/icons/leaf.svg", alt="Clean and Healthy").why-row-2-card__img
								.why-row-2-card__txtbox
									h2.why-row-2-card__title Clean and Healthy
									p.why-row-2-card__text We use only the best organic ingredients and gluten and dairy free cooking.
						.why-row-2__col
							.why-row-2-card
								.why-row-2-card__imgbox
									img(src="img/icons/timeicon.svg", alt="Reliable AND Flawless").why-row-2-card__img
								.why-row-2-card__txtbox
									h2.why-row-2-card__title Reliable AND Flawless
									p.why-row-2-card__text Successful catering is about organisation, high quality service, and great food.
							.why-row-2-card
								.why-row-2-card__imgbox
									img(src="img/icons/fit.svg", alt="Fits any size and budget").why-row-2-card__img
								.why-row-2-card__txtbox
									h2.why-row-2-card__title Fits any size and budget
									p.why-row-2-card__text We are able to serve events from 2 to 2000 guests and always at reasonable prices.
			.contact
				.contact__title Say hello
				.contact-box
					.contact-box-item
						a(href="https://goo.gl/maps/fjH3id2XLctCzzjG9", target="_blank").contact-box-item-link
							img(src="img/contact/geo.svg", alt="geo").contact-box-item-link__icon
							p.contact-box-item-link__text 45-35 #B 39th St, Sunnyside, NY 11104
					.contact-box-item
						a(href="mailto:contact@primeone.com?subject=Primeone question").contact-box-item-link
							img(src="img/contact/email.svg", alt="email").contact-box-item-link__icon
							p.contact-box-item-link__text contact@primeone.com
					.contact-box-item
						a(href="tel:(718)777-7777").contact-box-item-link
							img(src="img/contact/tel.svg", alt="tel").contact-box-item-link__icon
							p.contact-box-item-link__text (718) 777-7777
					.contact-box-social
						a(href="#").contact-box-social__fb
							img(src="img/contact/facebook.svg", alt="facebook")
						a(href="#").contact-box-social__tw
							img(src="img/contact/twitter.svg", alt="twitter")
						a(href="#").contact-box-social__ig
							img(src="img/contact/instagram.svg", alt="instagram")
						a(href="#").contact-box-social__gp
							img(src="img/contact/google-plus.svg", alt="google-plus")

			footer.footer
		script(src="js/main.js")